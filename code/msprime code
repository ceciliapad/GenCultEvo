import msprime

dem = msprime.Demography()
dem.add_population(name="A", description="Focal population", initial_size=500)
dem.add_population_parameters_change(time=100, growth_rate=0.01, population=0)
dem.sort_events()

## you can explore the demography with:
my_history = msprime.DemographyDebugger(demography=dem)

# now simulate the data
ts = msprime.sim_ancestry(samples={"A" : 20}, demography=dem, sequence_length=1000, random_seed=63461, recombination_rate=1e-7)
mts = msprime.sim_mutations(ts, rate=0.01)
mts.write_vcf(vcf_file, ploidy=2)


# lenght and recomb rate and mutation rate for each chromosome can be found in 
https://stdpopsim.readthedocs.io/en/latest/catalog.html#
# Look for Homo sapiens, there is a nice table.
